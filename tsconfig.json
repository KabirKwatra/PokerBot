{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "pretty": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "outDir": "./dist",
    },
    "include": [
        "src/**/*"
    ]
}